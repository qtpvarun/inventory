doctype

.panel.panel-default
    .panel-heading
        h3.panel-title Item Detail for Part # {{entity.partNumber}}
            a.btn.btn-default.btn-xs.pull-right(ui-sref="inventory.items.edit({id:entity._id})") Edit
    .panel-body
        small
            .col-md-3
                dl
                    dt Part Number
                    dd {{entity.partNumber}}
                    dt Description
                    dd {{entity.description}}
            .col-md-3
                dl
                    dt Commodity
                    dd {{entity.commodity}}
                    dt Issue UOM
                    dd {{entity.issueUnitOfMeasure}}
                    dt Order UOM
                    dd {{entity.orderUnitOfMeasure}}
            .col-md-3
                dl
                    dt Rotating?
                    dd {{entity.rotating | boolean }}
                    dt Kit?
                    dd {{entity.kit | boolean }}
                    dt Capitalized?
                    dd {{entity.capitalized | boolean }}
            .col-md-3
                dl
                    dt Condition Enabled?
                    dd {{entity.conditionEnabled | boolean }}
                    dt Inspect on Receipt?
                    dd {{entity.inspectOnReceipt | boolean }}
                    dt Created
                    dd {{entity.createdAt | date:'medium'}}
                    dt Updated
                    dd {{entity.updatedAt | date:'medium'}}

tabset
    tab(ng-repeat="t in tabs", heading="{{t.heading}}", select="$state.go(t.route)", active="t.active")
.view(ui-view)


