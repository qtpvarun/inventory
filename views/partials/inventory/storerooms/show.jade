doctype

.panel.panel-default
    .panel-heading
        h3.panel-title {{entity.description}}
            a.btn.btn-default.btn-xs.pull-right(ui-sref="inventory.storerooms.edit({id:entity._id})") Edit
    .panel-body
        small
            .col-md-3
                dl
                    dt Name
                    dd {{entity.name}}
                    dt Description
                    dd {{entity.description}}
            .col-md-3
                dl
                    dt Created
                    dd {{entity.createdAt | date:'medium'}}
                    dt Updated
                    dd {{entity.updatedAt | date:'medium'}}


tabset
    tab(ng-repeat="t in tabs", heading="{{t.heading}}", select="$state.go(t.route)", active="t.active")
.view(ui-view)


